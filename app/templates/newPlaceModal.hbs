<!-- New Pin Modal -->
<div id="newPlaceModal" data-keyboard="false" class="modal fade" tabindex="-1">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="photo-container photoInputContainer">
                    <input id="photoInput" type="file" name="photoInput" accept="image/*">
                    <label for="photoInput"></label>

                    <span class="photoInputDisclaimer">
                        Você pode adicionar uma foto mais tarde se quiser ;)
                    </span>
 
                    <img alt="" id="photoInputBg" />
                </div>

                <div class="modal-body">
                    <section>
                        <h2>Dê um nome pro bicicletário</h2>
                        <div class="text-input-wrapper">
                            <input required id="titleInput" name="text" type="text" class="text-input" placeholder="Sem nome" data-hj-whitelist>
                        </div>
                    </section>

                    <section>
                        <h2>
                        Cobertura
